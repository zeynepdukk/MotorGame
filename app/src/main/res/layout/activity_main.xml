<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/motorbg"
    android:id="@+id/rootLayout"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/score"
        android:textSize="28sp"
        android:text="Score: 0"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/noviceButton"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:text="Novice Level"
        app:backgroundTint="#3F51B5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/intermediateButton"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:text="Intermediate Level"
        app:backgroundTint="#3F51B5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/advancedButton"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:text="Advanced Level"
        app:backgroundTint="#3F51B5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>